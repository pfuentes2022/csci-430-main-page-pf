<!DOCTYPE html>
<html lang="eng">
    <head>
        {{>head}}
        <script defer src="/js/main.js"></script>
    </head>

    <body>
        <!--{{>navbar}}-->
        {{>accountControl}}
        {{>modify_account_modal}}
        {{>modify_task_modal}}
        {{>delete_task_confirm}}

        <div class="container">
            <br>
            <h2>Welcome!</h2>

            <p>This site is still under construction.</p>
        </div>

        <div class="container">
            <div id="contentArea"></div>

            <div><button class="btn modAcc sign-in" id="modifyAccountButton" data-bs-toggle="modal" data-bs-target="#modifyAccountModal">Modify Account</button></div>
            <br>

            <hr class="footerLine">

            <ul class="site-dir">
                <li><a href="lorem_ipsum"><p>Sample page</p></a></li>
            </ul>
        </div>
        
        <br>
        <div class="container main-btn"><button class="btn sign-in" id="getTaskList">See tasks</button>
        <button class="btn add-task-btn" id="addNewTaskShow">Add New Task</button>
        </div>


        <div class="container">



            <form class="taskForm" id="taskForm">
                <div>
                    <label for="newTitle">Title</label>
                    <input type="text" id="newTitle">
                </div>
                <div>
                    <label for="newDesc">Description</label>
                    <input type="text" id="newDesc">
                </div><br>
                <button class="btn mod-task-btn" id="addTaskBtn">Create Task</button>
            </form>


        </div>
        <br>
        <div id="taskList" class="container"></div>
        
        <div class="navbar task-card-nav" id="navTask">
            <button class="btn mod-task-btn" id="getTaskListLeft">Back</button>
            <button class="btn mod-task-btn" id="getTaskListRight">Next</button>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

    {{>footer}}
</html>